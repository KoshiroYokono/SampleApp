<div class="topic-edit-wrapper">
   <div class="container">
      <div class="row">
         <div class="col-md-6 col-md-offset-3">
            <%= image_tag @topic.image.url, class: 'topic-image'%>
            <h1 class="text-center">Edit Description</h1>
            <%= form_tag("/topics/#{@topic.id}", action: 'update', method: 'patch' )do %>

               <div class="form-group">
                  <%= label_tag :description %>
                  <%= text_area_tag :description, @topic.description, class: 'form-control' %>
               </div>

            <%= submit_tag '投稿', class: 'btn btn-black btn-block' %>

            <% end %>
         </div>
      </div>
   </div>
</div>
